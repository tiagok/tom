= form_for(@post) do |f|
  - if @post.errors.any?
    %div#error_explanation
      %h2
        = pluralize(@post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @post.errors.full_messages.each do |msg|
          %li
            = msg
  %div.field
    = f.label :title, "tÃ­tulo"
    %br
    = f.text_field :title

  %div.field
    = f.label :text, "post"
    %br
    = f.text_area :text, :rows => 5, :cols => 40

  %div.field
    = f.label :user_id
    %br
    = f.text_field :user_id

  %div.p_form_container
    %div
      = f.label :user_id, "user"
    %div
      = f.select(:user_id, User.all.collect {|user| [user.avatar, user.id]})

  =# label :temp, :tag
  =# select(:temp, :tag, Tag.all.collect {|tag| [tag.name, tag.id]})

  %div.p_form_container
    %div tags
    %div
      - @tags.each do |tag|
        = check_box(:tag, tag.id)
        = tag.name

  %div.p_form_container
    %div imagens
    %div
      - @images.each do |image|
        = check_box(:image, image.id)
        = image.path

  %div.actions
    = f.submit


